<h1><%= @topic.name %></h1>

<p class="lead"><%= @topic.description %></p>

<%= link_to "Edit Topic", edit_topic_path if can? :edit, @topic %><br/>

<%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-primary btn-small btn-danger', confirm: "Are you sure you want to delete this topic?" if can? :destroy, @topic %>

<div>
<% @posts.each do |post| %>
  <%= render partial: 'votes/voter', locals: { topic: @topic, post: post} %>
  <%= link_to (markdown post.title), [@topic, post] %>
  <small>
  <%= image_tag(post.user.avatar.tiny.url) if post.user.avatar? %>
  <p class="text-muted">submitted <%= time_ago_in_words(post.created_at) %> ago by 
  <%= post.user.name %></p>
  <%= post.comments.count %> Comments
</small><br/>
<%= image_tag(post.image.thumb.url) if post.image? %><br/>
<% end %>
</div>

<%= link_to "New Post", new_topic_post_path(@topic), class: 'btn btn-primary btn-large' if can? :create, @post %>

<%= will_paginate @posts %>
