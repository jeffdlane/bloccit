<h1>New Topic</h1>

<div class="row">
  <div class="span6">
    <%= form_for @topic, html: {class: 'form-horizontal'}  do |t| %>
      <%= t.label :name %>
      <%= t.text_field :name %>

      <%= t.label :description %>
      <%= t.text_area :description %>

      <%= t.label :public, class: 'checkbox' do %>
        <%= t.check_box :public %> Make Public topic
      <% end %>
      <%= t.submit "Save" %>
    <% end %>
  </div>
</div>